<%= stylesheets('gifts') %>
<div id="sign_up_thanks">
  <h1 >Preview your message and send now!</h1>
</div>
<br/>
<div id="gift_form_container">
  From: 
    <div class="show">
      <%= @gift.giver.first_name %>
    </div>
  To: 
    <div class="show">
      <%= @gift.receiver.first_name %>
      at
      <%= @gift.receiver.phone_number %>
    </div>
  Message: 
    <div class="show">
      <% if @gift.vendor.charity %> 
        <%= @gift.charity_text_message %>
      <% else %>
        <%= @gift.text_message_1 %></br></br>
        <%= @gift.text_message_2 %>
      <% end %>
    </div>

    <br/>

  
  <div class="paybutton pay_and_send_wrapper"> 
    <%= link_to "Pay with PayPal", send_to_paypal_url(:id => @gift.id) %>
  </div>
<br>
  You will be taken to the PayPal site to pay with your Credit Card or PayPal account.

</div>
