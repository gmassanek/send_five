<!DOCTYPE html>
<html>
<head>
  <title>SendFive</title>
  <%= stylesheet_link_tag    "application" %>
  <%= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Arvo:400,700,400italic,700italic', :media => 'screen' %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="header">
    <h1><span class = "first">sendfive</span><span class="second">now</span></h1>
  </div>
	
	<% if session[:user_id].present? %>
	  <%= link_to "My Account", user_url(session[:user_id]) %> | <%= link_to "Sign Out", session_url(session[:user_id]), :method => "delete" %>
	<% else %>
	  <%= link_to "Sign In", new_session_url %>
	<% end %>
	
	<hr>

<%= yield %>

</body>
</html>
